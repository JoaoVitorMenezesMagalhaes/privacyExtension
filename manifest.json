{
  "manifest_version": 2,
  "name": "Privacy",
  "version": "1.0",
  "description": "Essa extensão será capaz de fornecer ao usuário algumas informações relevantes de segurança",
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "cookies",
    "<all_urls>",
    "tabs"
  ],
  "browser_action": {
    "default_popup": "main.html",
    "default_icon": "icon.png",
    "default_title": "Privacy"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["main.js"]
    }
  ]
}
